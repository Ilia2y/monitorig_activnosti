<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="1200dp"
        android:layout_height="900dp"
        android:alpha="0.87"
        android:src="@drawable/back_otgimaniya_foto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.124" />

    <Button
        android:id="@+id/berpi_nouse_button"
        android:layout_width="402dp"
        android:layout_height="460dp"
        android:background="#65057551"
        android:text="0"
        android:textSize="69sp"
        android:visibility="invisible"
        app:backgroundTint="#65057551"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.638" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="171dp"
        android:layout_height="60dp"
        android:text="Таймер"
        android:textColor="#000000"
        android:textSize="46sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/berpi_timer_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Бёрпи"
        android:textColor="#000000"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <TextView
        android:id="@+id/berpi_timer_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <Button
        android:id="@+id/berpi_timer_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:background="#A30C0C"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="berpi_on_up_button_click"
        android:text="↑"
        android:textColor="#90A4AE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#A30C0C"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/berpi_timer_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />

    <Button
        android:id="@+id/berpi_timer_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:background="#A30C0C"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="berpi_on_down_button_click"
        android:text="↓"
        android:textColor="#90A4AE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#A30C0C"
        app:iconPadding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/berpi_timer_textView"
        app:layout_constraintTop_toBottomOf="@+id/berpi_timer_up"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/berpi_total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#000000"
        android:textSize="69sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/berpi_nouse_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/berpi_timer_textView"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/berpi_timer_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#6200ED"
        android:onClick="berpi_on_timer_start"
        android:text="Начать"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:layout_width="75dp"
        android:layout_height="72dp"
        android:gravity="center_horizontal|top|center_vertical"
        android:onClick="berpi_back"
        android:text="←"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <CheckBox
        android:id="@+id/berpi_timer_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Включить таймер"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/berpi_nouse_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/berpi_total_score"
        app:layout_constraintVertical_bias="0.9" />

    <Switch
        android:id="@+id/berpi_datchik_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:text="Датчик приближения"
        android:textOff="Датчик приближения"
        android:textOn="Нажатия кнопки носом"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/berpi_kalorii_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KKal"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/berpi_timer_checkBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/berpi_total_score"
        app:layout_constraintVertical_bias="0.9"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>